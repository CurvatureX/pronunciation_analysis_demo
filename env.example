# Azure Speech Service Configuration (Frontend Access)
NEXT_PUBLIC_AZURE_SPEECH_KEY=your_azure_speech_service_key_here
NEXT_PUBLIC_AZURE_SPEECH_REGION=japaneast

# Azure Speech Service Configuration (Backend Access - if needed)
AZURE_SPEECH_KEY=your_azure_speech_service_key_here
AZURE_SPEECH_REGION=japaneast

# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com

# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:3000/api
PRONUNCIATION_ASSESSMENT_ENDPOINT=/pronunciation-assessment

# Application Settings
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_ENABLE_DEBUG=true

# Audio Settings
MAX_RECORDING_DURATION_SECONDS=60
SUPPORTED_AUDIO_FORMATS=wav,mp3,m4a

# Assessment Configuration
DEFAULT_LANGUAGE=en-US
GRADING_SYSTEM=HundredMark
GRANULARITY=Phoneme
ENABLE_MISCUE=false
ENABLE_PROSODY_ASSESSMENT=true

# Security
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
API_RATE_LIMIT_REQUESTS_PER_MINUTE=30

# Database (if needed for future features)
DATABASE_URL=your_database_connection_string_here

# Logging
LOG_LEVEL=info
ENABLE_ANALYTICS=false 